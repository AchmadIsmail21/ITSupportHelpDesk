@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";
}

<form id="formRegister" class="signup-form" asp-controller="Login" asp-action="Auth" method="post">
    <h2 class="form-title">Login</h2>
    <div class="form-group">
        <label for="inputEmail"></label>
        <input type="email" class="form-input" name="email" id="inputEmail" placeholder="Your Email" required />
    </div>
    <div class="form-group">
        <label for="inputPassword"></label>
        <input type="password" class="form-input" name="password" id="inputPassword" placeholder="Password" />
        <span toggle="#inputPassword" class="zmdi zmdi-eye field-icon toggle-password"></span>
    </div>
    <div class="form-group">
        <input type="submit" id="login" class="form-submit" value="Sign In" @*onclick="register()*@ />
    </div>
    <p class="registerhere">
        Don't Have an account ? <a href="/" class="loginhere-link">Register here</a>
    </p>
</form>