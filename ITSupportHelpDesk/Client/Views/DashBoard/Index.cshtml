@{
}
@{
   //ViewData["Title"] = "Chart";
    Layout = "_DashboardLayout";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Dashboard</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Dashboard/">Dashboard</a></li>
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="row">
            @if (ViewBag.Role == "Admin Support")
            {
                <div class="col-12 mb-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-12 text-center ">
                                    <h2 class="mb-3 fw-bold">Selamat Datang, @ViewBag.Name, Your Role is : @ViewBag.Role</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-6 mb-12">
                    <div class="card">
                        <div class="card-body">
                            <div id="chartPriorityName">

                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-6 mb-12">
                    <div class="card">
                        <div class="card-body">
                            <div id="chartGender">

                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="col-12 mb-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-12 text-center ">
                                    <h2 class="mb-3 fw-bold">Selamat Datang, @ViewBag.Name, Your Role is : @ViewBag.Role</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>

<!-- /.content-wrapper -->
@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="~/js/Chart.js" asp-append-version="true"></script>
}